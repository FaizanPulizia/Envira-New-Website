---
import PassionCard from "./Components/PassionCard.astro";
import { PassionCards } from "./Components/PassionCardData.ts";
---

<section
  id="passion"
  class="flex flex-col items-center justify-center gap-8 rounded-none bg-green-50 px-8 py-10 md:gap-16 md:px-16 md:py-20 2xl:overflow-hidden 2xl:rounded-b-2xl"
>
  <div class="flex flex-col items-center justify-center gap-4 md:gap-8">
    <h2
      data-aos="fade-up"
      class="text-center text-3xl font-semibold tracking-wide text-balance capitalize md:text-left md:text-5xl 2xl:text-6xl"
    >
      Our Passion for Exceptional Service
    </h2>
    <p
      data-aos="slide-left"
      data-aos-anchor-placement="center-center"
      class="max-w-2xl text-left text-sm font-medium text-pretty md:text-center md:text-lg 2xl:max-w-3xl 2xl:text-xl"
    >
      Our approaches are based on a deep understanding of the solar energy
      market, we are committed to delivering innovative renewable energy
      solutions.
    </p>
  </div>
  <div
    class="flex w-full flex-col items-center justify-center gap-x-8 gap-y-4 md:flex-row"
  >
    {
      PassionCards.map((card) => (
        <div class="w-full md:w-1/2">
          <PassionCard {...card} />
        </div>
      ))
    }
  </div>
</section>
