---
import { Image } from "astro:assets";

import { type BenefitCardData } from "./BenefitCardsData.ts";

const { title, description, image } = Astro.props as BenefitCardData;
---

<div
  data-aos="zoom-in-up"
  class="group flex w-full cursor-default flex-col overflow-hidden rounded-2xl shadow-lg"
>
  <div class="relative h-32 w-full overflow-hidden sm:h-40 md:h-48">
    <Image
      class="size-full object-cover transition-all duration-500 group-hover:scale-105 group-hover:brightness-110 group-hover:saturate-110"
      src={image}
      alt={title}
      loading="lazy"
    />
  </div>
  <div class="w-full space-y-4 bg-white p-4">
    <h3
      class="mx-auto w-fit rounded-full bg-green-500 px-2 py-2 text-lg font-semibold backdrop-blur-xs transition-colors duration-500 group-hover:bg-green-600 sm:px-3 sm:font-semibold"
    >
      {title}
    </h3>
    <p class="px-3 text-sm font-medium text-pretty sm:text-base md:px-2">
      {description}
    </p>
  </div>
</div>
