---
import { Image } from "astro:assets";

import { type BenefitCardData } from "./BenefitCardsData.ts";

const { title, description, image } = Astro.props as BenefitCardData;
---

<div
  class="group flex w-full cursor-default flex-col overflow-hidden rounded-2xl shadow-lg"
>
  <div class="relative h-48 w-full overflow-hidden">
    <Image
      class="size-full object-cover transition-transform duration-500 will-change-transform group-hover:scale-105"
      src={image}
      alt={title}
      loading="lazy"
    />
  </div>
  <div class="w-full space-y-3 bg-white p-4">
    <h3
      class="mx-auto w-fit rounded-full bg-green-500 px-3 py-2 text-base font-medium backdrop-blur-xs transition-colors duration-500 group-hover:bg-green-600"
    >
      {title}
    </h3>
    <p class="px-2 text-sm text-pretty">{description}</p>
  </div>
</div>
