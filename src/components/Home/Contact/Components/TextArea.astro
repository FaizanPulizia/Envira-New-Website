---
const {
  id,
  label,
  rows = 3,
  required = false,
} = Astro.props as {
  id: string;
  label: string;
  rows?: number;
  required?: boolean;
};
---

<div class="relative">
  <textarea
    id={id}
    name={id}
    required={required}
    rows={rows}
    placeholder={label}
    class="peer w-full resize-none rounded-2xl border border-gray-300 bg-white px-4 py-2 placeholder:text-transparent invalid:ring-red-500 user-invalid:border-red-500 user-invalid:ring-1 focus:border-green-500 focus:ring-1 focus:ring-green-500 focus:outline-none"
  ></textarea>
  <label
    for={id}
    class="absolute -top-5 left-2 text-sm font-semibold text-gray-700 transition-all duration-200 ease-in-out peer-placeholder-shown:top-2 peer-placeholder-shown:left-4 peer-placeholder-shown:text-base peer-placeholder-shown:font-normal peer-placeholder-shown:text-slate-400 peer-focus:-top-5 peer-focus:left-2 peer-focus:text-sm peer-focus:font-semibold peer-focus:text-gray-700 2xl:-top-6 2xl:text-base 2xl:peer-focus:-top-6 2xl:peer-focus:text-base"
  >
    {label}
  </label>
</div>
